{
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "eqeqeq": "error",
        "no-console": "off"
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true,
        "worker": true,
        "mocha": true
    },
    "parserOptions": {
        "ecmaVersion": 2020
    },
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    }
}
