[user]
	name = rhysd
	email = lin90162@yahoo.co.jp
[core]
	editor = vim
	excludesfile = ~/.global.gitignore
[color]
	ui = true
[alias]
	ad  = add
	adp = add -p
	adu = add -u :/
	bl  = blame
	br  = branch
	cl  = clone
	cm  = commit -v
	cma = commit -v --amend
	cmf = commit --fixup
	cmm = commit -m
	co  = checkout
	cob = checkout -b
	di  = diff
	dic = diff --cached
	dis = diff --stat
	gr  = grep
	lo  = log --graph --pretty=format:'%C(Yellow)%h %C(Cyan)%ad %C(White)%s%C(Green)%d %C(Red)[%an]' --date=short
	lop = log -p
	lsf = ls-files
	mg  = merge
	mga = merge --abort
	mgn = merge --no-ff
	pl  = pull
	plr = pull --rebase
	ps  = push
	rb  = rebase
	rba = rebase --abort
	rbc = rebase --continue
	rbi = rebase -i
	re  = remote
	rmc = rm --cached
	rmr = rm -r
	rmrc = rm -r --cached
	st  = status -sb
	pushf = push --force-with-lease
	checkout-pr = "!f(){ \
			if [ -z \"$1\" ]; then\
				echo 'Usage: git checkout-pr {PR number}' 1>&2;\
				exit 1;\
			fi;\
			git fetch origin \"pull/$1/head:pr-$1\";\
			git checkout \"pr-$1\";\
		};f"
	copr = checkout-pr
[diff]
	compactionHeuristic = true
[push]
	default = simple
[github]
	user = rhysd
[ghq]
	root = ~/Develop
[tig]
	main-view-date = custom
	main-view-date-format = "%Y-%m-%d"
[tig "bind"]
	generic = <Ctrl-f> scroll-page-down
	generic = <Ctrl-b> scroll-page-up
[pager]
	diff = diff-highlight | less
[interactive]
	difffilter = diff-highlight
